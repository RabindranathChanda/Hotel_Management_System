<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>addroomsServlet</servlet-name>
        <servlet-class>addroomsServlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <!-- 10MB -->
            <max-request-size>52428800</max-request-size>
            <!-- 50MB -->
            <file-size-threshold>2097152</file-size-threshold>
            <!-- 2MB -->
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>bookroomServlet</servlet-name>
        <servlet-class>bookroomServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>regUserServlet</servlet-name>
        <servlet-class>regUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>logoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteBookingServlet</servlet-name>
        <servlet-class>deleteBookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addroomsServlet</servlet-name>
        <url-pattern>/addroomsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookroomServlet</servlet-name>
        <url-pattern>/bookroomServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>regUserServlet</servlet-name>
        <url-pattern>/regUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteBookingServlet</servlet-name>
        <url-pattern>/deleteBookingServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
